<CameraScreen>:
    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera
            play: False
            resolution: (640, 480)
            size_hint_y: 2.5
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.25
            Button:
                id: camera_button
                text: 'Camera'
                on_press: root.start() if root.ids.camera.play == False else root.stop()
                background_normal: ''  # Optionally, use a custom image
                background_color: 0.4, 0.6, 0.8, 1
                color: 1, 1, 1, 1
                border_radius: 10
            Button:
                text: 'Capture'
                on_press: root.capture()
                background_normal: ''
                background_color: 0.8, 0.4, 0.4, 1
                color: 1, 1, 1, 1
                border_radius: 10

<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: img
            size_hint_y: 0.7
            allow_stretch: True
            keep_ratio: True
        Button:
            text: "Create Shareable Link"
            on_press: root.create_link()
            background_color: 0.4, 0.6, 0.8, 1
            color: 1, 1, 1, 1
            border_radius: 10
        Label:
            id: link
            text: ''
        GridLayout:
            cols: 2
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_color: 0.8, 0.6, 0.2, 1
                color: 0, 0, 0, 1
                border_radius: 10
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_color: 0.5, 0.5, 0.7, 1
                color: 1, 1, 1, 1
                border_radius: 10

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'
